    <!-- Title Page-->
    <title>Register</title>

    <!-- Icons font CSS-->
    <link href="vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="/static/css/main.css" rel="stylesheet" media="all">
    
</head>

<body>
    <div class=custom>
        <img src="/static/main.jpg" alt="helo">
    </div>
        <div class="wrapper  font-poppins">
            <div class="card card-4 padd" >
                <div >
                    <div>
                        <h2 class="title" style="color: white">Update Form</h2>
                    </div>
                    <div>
                        <form action="/update/<%= email %>" method="POST" enctype="multipart/form-data">
                            
                            <div class="input-group">
                                <label class="label">Hobbies</label>
                                <div class="upload_cl">
                                    <textarea class="textarea" name="hobbies" id="" cols="30" rows="4"></textarea>
                                </div>
                            </div>

                            <div class="input-group">
                                <label class="label">Address</label>
                                <div class="upload_cl">
                                    <textarea class="textarea" name="address" id="" cols="30" rows="4"></textarea>
                                </div>
                            </div>

                            <div class="input-group">
                                <label class="label">Upload Image</label>
                                <div class="upload_cl">
                                    <input type="file" name="file">
                                    <p>Drag your files here or click in this area.</p>
                                </div>
                            </div>

                            <div class="p-t-15">
                                <button class="btn reg_btn btn--radius-1 " type="submit">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    <!-- Jquery JS-->
    <script src="/static/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="/static/vendor/select2/select2.min.js"></script>
    <script src="/static/vendor/datepicker/moment.min.js"></script>
    <script src="/static/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="/static/js/global.js"></script>
    <script>
        $(document).ready(function(){
  $('form input').change(function () {
    $('form p').text(this.files[0].name + " file selected");
  });
});
    </script>

